<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="IngredientMeasureQuantity" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
        <item name="android:gravity">center|center_horizontal|center_vertical</item>
        <item name="android:background">@drawable/ingredient_measure_quantity</item>
    </style>

    <style name="Step.30" parent="AppTheme">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@drawable/step_circle</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="Step.50" parent="AppTheme">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@drawable/step_circle</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.Title" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Widget.Item.Ingredient" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>
